<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".preferiti"
    android:background="@color/medium_high_blue">

    <TextView
        android:id="@+id/textView_preferiti"
        style="@style/textView_preferiti"
        android:layout_width="374sp"
        android:layout_height="75sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="20sp" />

    <Button
        android:id="@+id/button_sinner"
        style="@style/CustomButtonSinner"
        android:layout_width="350sp"
        android:layout_height="65sp"
        android:layout_marginTop="150sp"
        android:layout_marginStart="40sp" />

    <ImageView
        android:id="@+id/SinnerImg"
        style="@style/SinnerImg."
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginStart="60sp"
        android:layout_marginTop="160sp" />

    <ImageView
        android:id="@+id/ItaliaImg"
        style="@style/ItaImg."
        android:layout_width="35sp"
