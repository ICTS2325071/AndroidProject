    <ImageView
        android:id="@+id/SpaImg"
        style="@style/SpaImg."
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:layout_marginStart="320sp"
        android:layout_marginTop="365sp" />

    <Button
        android:id="@+id/button_fritz"
        style="@style/CustomButtonFritz"
        android:layout_width="350sp"
        android:layout_height="65sp"
        android:layout_marginTop="450sp"
        android:layout_marginStart="40sp" />

    <ImageView
        android:id="@+id/FritzImg"
        style="@style/FritzImg."
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginStart="60sp"
        android:layout_marginTop="460sp" />

    <ImageView
        android:id="@+id/UsaImg"
        style="@style/UsaImg."
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:layout_marginStart="320sp"
