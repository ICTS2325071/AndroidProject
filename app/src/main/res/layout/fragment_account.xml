<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountFragment"
    android:background="@color/medium_high_blue">

    <TextView
        android:id="@+id/textView_account"
        style="@style/textView_account"
        android:layout_width="374sp"
        android:layout_height="75sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="20sp" />

    <TextView
        android:id="@+id/bottomBackground"
        style="@style/CustomBackgroundWhite"
        android:layout_width="414sp"
        android:layout_height="520sp"
        android:layout_marginTop="215sp" />

    <TextView
        android:id="@+id/utente_"
        style="@style/name_utente_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginTop="250sp" />

    <TextView
       android:layout_width="250sp"
       android:layout_height="40sp"
       android:background="@color/opacity_blue"
       android:layout_marginStart="30sp"
       android:layout_marginTop="290sp"/>

    <Button
        android:id="@+id/button_changeuser"
        style="@style/CustomButtonUser"
        android:layout_width="120sp"
        android:layout_height="60sp"
        android:layout_marginStart="285sp"
        android:layout_marginTop="270sp" />

    <TextView
        android:id="@+id/email_"
        style="@style/name_email_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginTop="380sp" />

    <TextView
        android:layout_width="250sp"
        android:layout_height="40sp"
        android:background="@color/opacity_blue"
        android:layout_marginStart="30sp"
        android:layout_marginTop="420sp"/>

    <Button
        android:id="@+id/button_changeemail"
        style="@style/CustomButtonEmail_"
        android:layout_width="120sp"
        android:layout_height="60sp"
        android:layout_marginTop="400sp"
        android:layout_marginStart="285sp"/>

    <TextView
        android:id="@+id/password_"
        style="@style/name_password_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginTop="510sp" />

    <TextView
        android:layout_width="250sp"
        android:layout_height="40sp"
        android:background="@color/opacity_blue"
        android:layout_marginStart="30sp"
        android:layout_marginTop="550sp"/>

    <Button
        android:id="@+id/button_changepss"
        style="@style/CustomButtonPss"
        android:layout_width="120sp"
        android:layout_height="60sp"
        android:layout_marginTop="530sp"
        android:layout_marginStart="285sp"/>

    <!-- FARE DUE ACTIVITY PER I DUE PULSANTI -->

    <TextView
        android:id="@+id/textView_menu_bottom"
        style="@style/CustomLayoutMenuBottom"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="650sp"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/imageButton_home"
        style="@style/CustomHomeImageWhite"
        android:layout_width="37sp"
        android:layout_height="37sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="661sp"/>

    <ImageButton
        android:id="@+id/imageButton_favourites"
        style="@style/CustomStarImageWhite"
        android:layout_width="37sp"
        android:layout_height="37sp"
        android:layout_marginStart="187sp"
        android:layout_marginTop="661sp" />

    <ImageButton
        android:id="@+id/imageButton_settings"
        style="@style/CustomSettingsImageWhite"
        android:layout_width="37sp"
        android:layout_height="37sp"
        android:layout_marginStart="330sp"
        android:layout_marginTop="661sp" />

</FrameLayout>