<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/statistics_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticsPlayerFragment"
    android:background="@color/medium_high_blue">

    <ImageView
        android:id="@+id/player_img"
        android:layout_width="120sp"
        android:layout_height="170sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="20sp"/>

    <Button
        android:id="@+id/info_player"
        style="@style/Informazioni_"
        android:text="@string/Info_player"
        android:layout_width="120sp"
        android:layout_height="80sp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20sp"/>

    <Button
        android:id="@+id/stats_player"
        style="@style/Informazioni2_"
        android:text="@string/Stat_player"
        android:layout_width="120sp"
        android:layout_height="80sp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="20sp"/>

    <Button
        android:id="@+id/stats_career"
        style="@style/Carriera_"
        android:layout_width="120sp"
        android:layout_height="80sp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="110sp" />

    <Button
        android:id="@+id/button_last_news"
        style="@style/Ultime_news_"
        android:layout_width="120sp"
        android:layout_height="80sp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="110sp" />


</FrameLayout>