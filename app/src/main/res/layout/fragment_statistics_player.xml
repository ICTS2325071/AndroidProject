<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/statistics_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticsPlayerFragment"
    android:background="@color/medium_high_blue">

    <TextView
        android:id="@+id/textViewRanking"
        style="@style/CustomTextViewStats"
        android:layout_width="350sp"
        android:layout_height="50sp"
        android:layout_marginTop="20sp"
        android:layout_marginStart="30sp" />

    <TextView
        android:id="@+id/textViewPoints"
        style="@style/CustomTextViewStats"
        android:layout_width="350sp"
        android:layout_height="50sp"
        android:layout_marginTop="90sp"
        android:layout_marginStart="30sp" />

    <TextView
        android:id="@+id/textViewMatchesWon"
        style="@style/CustomTextViewStats"
        android:layout_width="350sp"
        android:layout_height="50sp"
        android:layout_marginTop="160sp"
        android:layout_marginStart="30sp" />

    <TextView
        android:id="@+id/textViewMatchesLost"
        style="@style/CustomTextViewStats"
        android:layout_width="350sp"
        android:layout_height="50sp"
        android:layout_marginTop="230sp"
        android:layout_marginStart="30sp" />

    <TextView
        android:id="@+id/textViewWinRate"
        style="@style/CustomTextViewStats"
        android:layout_width="350sp"
        android:layout_height="50sp"
        android:layout_marginTop="300sp"
        android:layout_marginStart="30sp" />

    <TextView
        android:id="@+id/textViewTournamentsWon"
        style="@style/CustomTextViewStats"
        android:layout_width="350sp"
        android:layout_height="50sp"
        android:layout_marginTop="370sp"
        android:layout_marginStart="30sp" />

</FrameLayout>