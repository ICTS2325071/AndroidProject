<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AppleFragment"
    android:background="@color/medium_high_blue">

    <TextView
        android:id="@+id/textViewLoginTitle"
        style="@style/textView_HomeLogin"
        android:layout_width="374sp"
        android:layout_height="75sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="20sp" />

    <TextView
        android:id="@+id/bottomBackground"
        style="@style/CustomTextViewLogin"
        android:layout_width="414sp"
        android:layout_height="520sp"
        android:layout_marginTop="215sp" />

    <ImageView
        android:id="@+id/imageViewApple"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/apple"
        android:layout_marginStart="80sp"
        android:layout_marginTop="235sp" />

    <TextView
        android:id="@+id/apple"
        style="@style/accedi_apple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150sp"
        android:layout_marginTop="250sp" />

    <TextView
        android:id="@+id/enter_apple"
        style="@style/enter_apple_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120sp"
        android:layout_marginTop="375sp" />

    <EditText
        android:layout_width="335sp"
        android:layout_height="40sp"
        android:layout_marginStart="42sp"
        android:layout_marginTop="410sp"
        android:background="@color/opacity_blue" />

    <TextView
        android:id="@+id/password"
        style="@style/enter_password_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125sp"
        android:layout_marginTop="525sp" />

    <EditText
        android:layout_width="335sp"
        android:layout_height="40sp"
        android:layout_marginStart="42sp"
        android:layout_marginTop="560sp"
        android:background="@color/opacity_blue" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="690sp"
        android:layout_marginStart="10sp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_right"
            style="@style/backImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/back"
            style="@style/right_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="690sp"
        android:layout_marginStart="315sp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login"
            style="@style/left_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp" />

        <ImageView
            android:id="@+id/backImg"
            style="@style/loginImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>