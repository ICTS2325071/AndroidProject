<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/medium_high_blue">

    <TextView
        android:id="@+id/textView_home"
        style="@style/CustomTextViewHome"
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_statistics"
        style="@style/CustomButtonStatistics"
        android:layout_width="348sp"
        android:layout_height="51sp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_home" />

    <TextView
        android:id="@+id/textView_menu"
        style="@style/CustomTextViewMenu"
        android:layout_width="match_parent"
        android:layout_height="73sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_menu_home"
        style="@style/CustomButtonMenuHome"
        android:layout_width="46sp"
        android:layout_height="57sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_menu"
        app:layout_constraintStart_toStartOf="@+id/textView_menu"
        app:layout_constraintTop_toTopOf="@+id/textView_menu" />

    <Button
        android:id="@+id/button_menu_favourites"
        android:layout_width="46sp"
        android:layout_height="57sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_menu"
        app:layout_constraintEnd_toStartOf="@+id/button_menu_settings"
        app:layout_constraintStart_toEndOf="@+id/button_menu_home"
        app:layout_constraintTop_toTopOf="@+id/textView_menu" />

    <Button
        android:id="@+id/button_menu_settings"
        android:layout_width="46sp"
        android:layout_height="57sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_menu"
        app:layout_constraintEnd_toEndOf="@+id/textView_menu"
        app:layout_constraintTop_toTopOf="@+id/textView_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>