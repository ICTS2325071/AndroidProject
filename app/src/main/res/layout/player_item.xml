<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_player"
        style="@style/CustomButtonPlayer"
        android:layout_width="350sp"
        android:layout_height="80sp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/player_img"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_player"
        app:layout_constraintStart_toStartOf="@+id/button_player"
        app:layout_constraintTop_toTopOf="@+id/button_player" />

    <ImageButton
        android:id="@+id/imageButton_star_empty"
        style="@style/CustomStarImageWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_player"
        app:layout_constraintEnd_toEndOf="@+id/button_player"
        app:layout_constraintTop_toTopOf="@+id/button_player" />

</androidx.constraintlayout.widget.ConstraintLayout>