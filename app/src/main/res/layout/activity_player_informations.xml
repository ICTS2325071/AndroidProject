<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_informations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerInformationsActivity"
    android:background="@color/medium_high_blue">

    <TextView
        android:id="@+id/title_player_informations"
        style="@style/CustomTitlePlayerInformations"
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="20dp"
        android:background="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/back"
        style="@style/backImgWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/title_player_informations"
        app:layout_constraintStart_toStartOf="@+id/title_player_informations"
        app:layout_constraintTop_toTopOf="@+id/title_player_informations" />

    <ImageView
        android:id="@+id/country_img"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/title_player_informations"
        app:layout_constraintEnd_toEndOf="@+id/title_player_informations"
        app:layout_constraintTop_toTopOf="@+id/title_player_informations" />

    <ImageView
        android:id="@+id/player_img"
        android:layout_width="120sp"
        android:layout_height="170sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_player_informations" />

    <Button
        android:id="@+id/info_player"
        style="@style/Informazioni2_"
        android:layout_width="120sp"
        android:layout_height="80sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/Info_player"
        app:layout_constraintStart_toEndOf="@+id/player_img"
        app:layout_constraintTop_toBottomOf="@+id/title_player_informations" />

    <Button
        android:id="@+id/stats_player"
        style="@style/Statistiche_"
        android:layout_width="120sp"
        android:layout_height="80sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/info_player"
        app:layout_constraintTop_toBottomOf="@+id/title_player_informations" />

    <Button
        android:id="@+id/stats_career"
        style="@style/Carriera_"
        android:layout_width="120sp"
        android:layout_height="80sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/player_img"
        app:layout_constraintTop_toBottomOf="@+id/info_player" />

    <Button
        android:id="@+id/button_last_news"
        style="@style/Ultime_news_"
        android:layout_width="120sp"
        android:layout_height="80sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/stats_career"
        app:layout_constraintTop_toBottomOf="@+id/stats_player" />



    <TextView
        android:id="@+id/textView_menu_bottom"
        style="@style/CustomLayoutMenuBottom"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/imageButton_home"
        style="@style/CustomHomeImageWhite"
        android:layout_width="37sp"
        android:layout_height="37sp"
        android:layout_marginStart="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_menu_bottom"
        app:layout_constraintStart_toStartOf="@+id/textView_menu_bottom"
        app:layout_constraintTop_toTopOf="@+id/textView_menu_bottom" />

    <ImageButton
        android:id="@+id/imageButton_favourites"
        style="@style/CustomStarImageWhite"
        android:layout_width="37sp"
        android:layout_height="37sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_menu_bottom"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_settings"
        app:layout_constraintStart_toEndOf="@+id/imageButton_home"
        app:layout_constraintTop_toTopOf="@+id/textView_menu_bottom" />

    <ImageButton
        android:id="@+id/imageButton_settings"
        style="@style/CustomSettingsImageWhite"
        android:layout_width="37sp"
        android:layout_height="37sp"
        android:layout_marginEnd="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_menu_bottom"
        app:layout_constraintEnd_toEndOf="@+id/textView_menu_bottom"
        app:layout_constraintTop_toTopOf="@+id/textView_menu_bottom" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="650sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_player_informations" />

</androidx.constraintlayout.widget.ConstraintLayout>