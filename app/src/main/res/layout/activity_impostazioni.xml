<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/medium_high_blue">

    <LinearLayout
        android:id="@+id/vertical_background"
        style="@style/CustomTextViewLogin"
        android:layout_width="260sp"
        android:layout_height="730sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/horizontal_title_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:layout_marginStart="10sp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/settings_title_imageView"
                style="@style/CustomSettings"
                android:layout_width="50sp"
                android:layout_height="50sp" />

            <TextView
                android:id="@+id/title_impo"
                style="@style/textView_Impo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100sp"
            android:layout_marginStart="20sp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/NotificheImg"
                style="@style/NotificheImg"
                android:layout_width="30sp"
                android:layout_height="30sp" />

            <TextView
                android:id="@+id/button_notifiche"
                style="@style/CustomButtonNotifiche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100sp"
            android:layout_marginStart="20sp"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/Account_img"
                style="@style/Account_Img."
                android:layout_width="30sp"
                android:layout_height="30sp" />

            <TextView
                android:id="@+id/button_account"
                style="@style/CustomButtonAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100sp"
            android:layout_marginStart="20sp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Preferitimg"
                style="@style/Preferitimg."
                android:layout_width="30sp"
                android:layout_height="30sp" />

            <TextView
                android:id="@+id/button_preferiti"
                style="@style/CustomButtonPreferiti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200sp"
            android:layout_marginStart="10sp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/EliminaImg"
                style="@style/EliminaImg."
                android:layout_width="30sp"
                android:layout_height="30sp" />

            <TextView
                android:id="@+id/button_elimina"
                style="@style/CustomButtonElimina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>