<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Facebook"
    android:background="@color/medium_high_blue">>

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textViewLoginTitle"
        style="@style/textView_HomeLogin"
        android:layout_width="374sp"
        android:layout_height="75sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/bottomBackground"
        style="@style/CustomTextViewLogin"
        android:layout_width="414sp"
        android:layout_height="520sp"
        android:layout_marginTop="215sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewFacebook"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/facebook"
        android:layout_marginLeft="80sp"
        android:layout_marginTop="235sp"/>

    <TextView
        android:id="@+id/facebook"
        style="@style/accedi_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140sp"
        android:layout_marginTop="245sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottomBackground" />

    <TextView
        android:id="@+id/enter_facebook"
        style="@style/enter_facebook_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90sp"
        android:layout_marginTop="400sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:layout_width="335sp"
        android:layout_height="40sp"
        android:padding="12dp"
        android:layout_marginLeft="42sp"
        android:layout_marginTop="440sp"
        android:background="@color/opacity_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/password"
        style="@style/enter_password_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125sp"
        android:layout_marginTop="550sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:layout_width="335sp"
        android:layout_height="40sp"
        android:padding="12dp"
        android:layout_marginStart="42sp"
        android:layout_marginTop="590sp"
        android:background="@color/opacity_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="700sp"
        android:layout_marginStart="10sp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_right"
            style="@style/backImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/back"
            style="@style/right_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="700sp"
        android:layout_marginStart="315sp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login"
            style="@style/left_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp" />

        <ImageView
            android:id="@+id/backImg"
            style="@style/loginImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</FrameLayout>