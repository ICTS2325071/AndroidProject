<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/medium_high_blue">

    <TextView
        android:id="@+id/textView_container_statistics"
        style="@style/CustomContainerTextViewStatistics"
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_title_image_statistics"
        style="@style/CustomTennisImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_container_statistics"
        app:layout_constraintStart_toStartOf="@+id/textView_container_statistics"
        app:layout_constraintTop_toTopOf="@+id/textView_container_statistics" />

    <TextView
        android:id="@+id/textView_statistics"
        style="@style/CustomTextViewStatistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="110dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_container_statistics"
        app:layout_constraintEnd_toEndOf="@+id/textView_container_statistics"
        app:layout_constraintTop_toTopOf="@+id/textView_container_statistics" />

    <EditText
        android:id="@+id/editText_search"
        android:layout_width="330sp"
        android:layout_height="40sp"
        android:layout_marginTop="50dp"
        android:hint="search tennis player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_container_statistics" />


</androidx.constraintlayout.widget.ConstraintLayout>